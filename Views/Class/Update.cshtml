@model List<School>;
    @{
    ViewData["Title"] = "School Page";
    var schools = Model;
    var class1 = ViewBag.Class;
    }

    <div class="text">
        <form action="/class/save" method="get" >
         <div class="form-group">
              <label for="Id">Id</label>
              <input type="text" readonly class="form-control" id="Id" name="Id" value="@class1.Id">
            </div>
            <div class="form-group">
              <label for="Name">Name</label>
              <input type="text" class="form-control" id="Name" name="NameClass" value="@class1.NameClass">
            </div>
              <div class="form-group">
                <label for="CategoryId">CategoryId</label>
                <select class="form-control" id="SchoolId" name="SchoolId" value="@class1.SchoolId">
                  @foreach(var school in schools){
                    @if(school.Id == class1.School.Id){
                         <option value="@school.Id" selected>@school.NameSchool </option>
                    }else{
                       <option value="@school.Id">@school.NameSchool </option>
                    }
                 
                  }
                </select>
              </div>     
              <button type="submit" class="btn btn-primary">Submit</button>
          </form>
    </div>