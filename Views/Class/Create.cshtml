@model List<School>
    @{
    ViewData["Title"] = "School Page";
    var Class = Model;
    }

    <div class="text">
        <form action="/class/save" method="get" >
            <div class="form-group">
              <label for="NameClass">NameClass</label>
              <input type="text" class="form-control" id="NameClass" name="NameClass">
            </div>
              <div class="form-group">
                <label for="SchoolId">School</label>
                <select class="form-control" id="SchoolId" name="SchoolId">
                  @foreach(var school in Class){
                    <option value="@school.Id">@school.NameSchool </option>
                  }
                </select>
              </div>     
              <button type="submit" class="btn btn-primary">Submit</button>
          </form>
    </div>